<view class="ad_popError" wx:if="{{popErrorMsg}}">{{popErrorMsg}}</view>
<view class="container">
  <view class="login-icon">
    <image class="login-img" src="../menu/login.png"></image>
  </view>
  <view class="login-from">
 
    <!--账号-->
    <view class="inputView">
      <label class="loginLab"><image class="nameImage" src="../menu/name.png"></image>账号</label>
      <input class="inputText" type='text' placeholder="请输入手机号" bindinput="phoneInput" />
    </view>
    <view class="line"></view>
 
    <!--密码-->
    <view class="inputView">
      <label class="loginLab"><image class="keyImage" src="../menu/key.png"></image>密码</label>
      <input class="inputText" password="true" placeholder="请输入密码" bindinput="passwordInput" />
    </view>
 
    <!--按钮-->
    <view class="loginBtnView">
      <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="login">登录</button>
    </view>
  </view>
</view>