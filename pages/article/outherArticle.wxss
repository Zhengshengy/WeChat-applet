  height: 180rpx;
}
#articleimage{
  width:100%;
  height: 160rpx;
  border-radius: 2%;
}
.loading{
  padding: 10rpx;
  text-align: center;
  font-size: 28rpx;
}
.loading:before{
  display: inline-block;
  margin-right: 5rpx;
  vertical-align: middle;
  content: '';
  width: 40rpx;
  height: 40rpx;
  background-size: contain;
  animation: rotate 1s linear infinite;
}
.loading.complete:before{
  display: none;
}
